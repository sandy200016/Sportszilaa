<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="8dp"
    tools:context=".field_events">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Qoute container-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/quote_container"
            android:elevation="30dp"
            android:paddingLeft="20dp"
            android:paddingTop="35dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_italic"
                android:text="'I've failed over and over again in my life \n and that is why i succeed.'"
                android:textColor="@color/textColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quote"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="8dp"
                android:text="-Michael Jordan"
                android:textColor="@color/textColor" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/trackevent_i" />

        </RelativeLayout>


        <!--Player Details-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="PLAYER'S DETAILS"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Player 1"
            android:textColor="@color/textColor"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/fieldEvent_playerName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_bg"

            android:textColorHint="@color/textColor"
            android:textColor="@color/textColor"
            android:drawableStart="@drawable/user_icon"
            android:drawableLeft="@drawable/user_icon"
            android:drawablePadding="9dp"
            android:hint="Enter your name"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/fieldEvent_playerPhone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:textColorHint="@color/textColor"
            android:textColor="@color/textColor"
            android:drawableStart="@drawable/edittext_phone"
            android:drawableLeft="@drawable/edittext_phone"
            android:drawablePadding="9dp"
            android:hint="Enter your phone number"
            android:inputType="phone"
            android:padding="10dp"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="@color/backgroundColor">

            <TextView
                android:id="@+id/field_class"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:background="@drawable/dropdown_1"
                android:hint="Select class"
                android:paddingLeft="11dp"
                android:onClick="field_select_class"
                android:textColorHint="@color/textColor"
                android:textColor="@color/textColor"
                android:paddingTop="12dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/field_house"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:textColorHint="@color/textColor"
                android:textColor="@color/textColor"
                android:layout_alignParentRight="true"
                android:background="@drawable/dropdown_1"
                android:drawablePadding="8dp"
                android:hint="Select house"
                android:paddingLeft="11dp"
                android:paddingTop="12dp"
                android:paddingRight="9dp"
                android:onClick="field_select_house"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="CATEGORY"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/field_category"
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColorHint="@color/textColor"
            android:textColor="@color/textColor"
            android:layout_marginTop="13dp"
            android:background="@drawable/dropdown_1"
            android:drawablePadding="8dp"
            android:hint="Select category"
            android:onClick="field_category"
            android:paddingLeft="11dp"
            android:paddingTop="12dp"
            android:paddingRight="9dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="EVENTS"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/field_events"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:textColorHint="@color/textColor"
            android:textColor="@color/textColor"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/dropdown_2"
            android:drawablePadding="8dp"
            android:onClick="fieldEvents"
            android:hint="@string/edittext_hint"
            android:paddingLeft="11dp"
            android:paddingTop="12dp"
            android:paddingRight="9dp"
            android:textSize="12sp" />
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fieldEvent_prize"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_toLeftOf="@+id/fieldEvent_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount:  "
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="14sp"
                 />

        </RelativeLayout>


        <!--Payment Button-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="PAYMENT"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@color/backgroundColor">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@drawable/offline_payment_button"
                android:onClick="offlinePayment_feild"
                android:text="Offline"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/online_payment_button"
                android:onClick="onlinepayment_field"
                android:text="Online"
                android:textAllCaps="false"
                android:textColor="@color/white"
               />
            />
        </RelativeLayout>


    </LinearLayout>


</ScrollView>