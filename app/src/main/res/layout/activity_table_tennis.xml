<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".table_tennis">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/table_tennis_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:elevation="0dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/table_tennis_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appheader"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/white"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/textColor" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/table_tennis_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/table_tennis_tabs"
        android:background="@color/backgroundColor"
         />

</RelativeLayout>