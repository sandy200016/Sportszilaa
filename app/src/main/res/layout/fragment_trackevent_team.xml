<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trackevent_team">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@color/backgroundColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/quote_container"
                android:elevation="30dp"
                android:paddingLeft="20dp"
                android:paddingTop="35dp"
                android:paddingRight="6dp">

                <TextView
                    android:id="@+id/quote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/segoe_italic"
                    android:text="'Believe in your dreams and that \n anything is possible.'"
                    android:textColor="@color/textColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quote"
                    android:layout_marginLeft="128dp"
                    android:layout_marginTop="8dp"
                    android:text="-Usain Bolt"
                    android:textColor="@color/textColor" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/illustration" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="PLAYER'S DETAILS"
                android:textColor="@color/textColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Player 1"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/user_icon"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:drawableLeft="@drawable/user_icon"
                android:drawablePadding="9dp"
                android:hint="Enter your name"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Player 2"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/user_icon"
                android:drawableLeft="@drawable/user_icon"
                android:drawablePadding="9dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:hint="Enter your name"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Player 3"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/user_icon"
                android:drawableLeft="@drawable/user_icon"
                android:drawablePadding="9dp"
                android:hint="Enter your name"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Player 4"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/user_icon"
                android:drawableLeft="@drawable/user_icon"
                android:drawablePadding="9dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:hint="Enter your name"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="16sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Number"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:textStyle="bold" />


            <EditText

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/edittext_phone"
                android:drawableLeft="@drawable/edittext_phone"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:drawablePadding="9dp"
                android:hint="Enter your phone number"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/backgroundColor">

                <ImageView
                    android:id="@+id/detail"
                    android:layout_marginTop="3dp"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:src="@drawable/about_up" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColor"
                    android:layout_toRightOf="@+id/detail"
                    android:text="Team leader's mobile number"
                    android:textSize="12sp" />
            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/backgroundColor">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CATEGORY"
                    android:textColor="@color/textColor"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.26" />

                <TextView
                    android:id="@+id/track_select_category_team"
                    android:layout_width="165dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dropdown_1"
                    android:drawablePadding="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColor"
                    android:hint="Select category"
                    android:onClick="track_category_team"
                    android:paddingLeft="11dp"
                    android:paddingTop="12dp"
                    android:paddingRight="9dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="OnClick" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOUSE"
                    android:textColor="@color/textColor"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/track_select_house_team"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.26999998" />

                <TextView
                    android:id="@+id/track_select_house_team"
                    android:layout_width="165dp"
                    android:layout_height="45dp"
                    android:background="@drawable/dropdown_1"
                    android:drawablePadding="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColor"
                    android:hint="Select house"
                    android:onClick="track_house_team"
                    android:paddingLeft="11dp"
                    android:paddingTop="12dp"
                    android:paddingRight="9dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="OnClick" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="PAYMENT"
                android:textColor="@color/textColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@color/backgroundColor">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/offline_payment_button"
                    android:onClick="offlinePayment_track_team"
                    android:text="Offline"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    tools:ignore="OnClick" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/online_payment_button"
                    android:onClick="onlinePayment_track_team"
                    android:text="Online"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    tools:ignore="OnClick" />

            </RelativeLayout>


        </LinearLayout>


    </ScrollView>
</FrameLayout>